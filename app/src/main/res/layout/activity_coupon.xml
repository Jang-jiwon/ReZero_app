<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:layout_weight="10">

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/backBtn"
            android:padding="13dp"
            android:background="#00FFFFFF"
            android:scaleType="fitCenter"
            android:src="@drawable/backbtn"
            android:layout_weight="1"/>

        <TextView
            android:gravity="center"
            android:id="@+id/registration_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="6dp"
            android:layout_weight="10"
            android:text="쿠폰"
            android:fontFamily="@font/nanumsquare"
            android:textSize="20dp"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.8">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/coupon_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="10"
                android:fontFamily="@font/nanumsquare"
                android:gravity="center"
                android:text="OOO님께 드리는 쿠폰 혜택 ♥"
                android:textSize="20dp"
                android:textColor="#6D819C"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/coupon_btn1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@android:color/transparent"
                    app:srcCompat="@drawable/coupon_design_1"
                    android:onClick="onCouponClick1"/>

                <ImageButton
                    android:id="@+id/coupon_btn2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@android:color/transparent"
                    app:srcCompat="@drawable/coupon_design_2"
                    android:onClick="onCouponClick2" />

                <ImageButton
                    android:id="@+id/coupon_btn3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@android:color/transparent"
                    app:srcCompat="@drawable/coupon_design_3"
                    android:onClick="onCouponClick3" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
