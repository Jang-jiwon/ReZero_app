<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Order"
    android:orientation="vertical"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="15dp">
        <ImageButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:src="@drawable/backbtn"
            android:background="#0000FF00"/>
        <ImageView
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:src="@drawable/carticonsize"
            android:layout_marginHorizontal="5dp"/>
        <TextView
            android:layout_gravity="center"
            android:layout_marginHorizontal="5dp"
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_height="match_parent"
            android:text="장바구니"
            android:textColor="#6D819C"
            android:textSize="18dp"/>
    </LinearLayout>

    <ImageView
        android:layout_marginVertical="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/slicebar"/>

    <LinearLayout
        android:id="@+id/orderList"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5">
        <TextView
            android:gravity="right"
            android:layout_weight="4"
            android:layout_margin="5dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="주문 상품 총"
            android:textSize="17dp"
            android:textColor="#263959"/>
        <TextView
            android:gravity="center"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="17dp"
            android:textColor="#263959"/>
        <TextView
            android:gravity="center"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="개"
            android:textSize="17dp"
            android:textColor="#263959"/>
        <ImageView
            android:gravity="center"
            android:layout_weight="2"
            android:layout_margin="10dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/downbtn2"/>
    </LinearLayout>
    <ImageView
        android:layout_marginVertical="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/slicebar"/>

    <LinearLayout
        android:layout_margin="10dp"
        android:layout_weight="7"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="배송지 정보"
                android:textColor="#263959"
                android:textSize="17dp"/>
            <LinearLayout
                android:gravity="right"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounding_p_m_btn"
                    android:text="변경하기"
                    android:textColor="#6D819C"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="이름"
                android:textSize="15dp"
                android:textColor="@color/login_bg_green"/>
            <TextView
                android:layout_weight="4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="장지원"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="전화번호"
                android:textSize="15dp"
                android:textColor="@color/login_bg_green"/>
            <TextView
                android:layout_weight="4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="010-1234-5678"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="주소"
                android:textSize="15dp"
                android:textColor="@color/login_bg_green"/>
            <TextView
                android:layout_weight="4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="경기도 OO시 OO로 OO - O"/>
        </LinearLayout>
        <Button
            android:paddingRight="20dp"
            android:gravity="center"
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounding_p_m_btn"
            android:text="          배송 요청 사항"
            android:textColor="#6D819C"
            android:drawableRight="@drawable/downbtn2"/>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/slicebar"/>
    <LinearLayout
        android:layout_margin="10dp"
        android:layout_weight="5"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="환불 계좌 정보"
                android:textColor="#263959"
                android:textSize="17dp"/>
            <LinearLayout
                android:gravity="right"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounding_p_m_btn"
                    android:text="변경하기"
                    android:textColor="#6D819C"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="예금주"
                android:textSize="15dp"
                android:textColor="@color/login_bg_green"/>
            <TextView
                android:layout_weight="4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="장지원"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="은행"
                android:textSize="15dp"
                android:textColor="@color/login_bg_green"/>
            <TextView
                android:layout_weight="4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="지원뱅크"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="계좌번호"
                android:textSize="15dp"
                android:textColor="@color/login_bg_green"/>
            <TextView
                android:layout_weight="4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="123-456789-1234"/>
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/slicebar"/>
    <LinearLayout
        android:layout_margin="10dp"
        android:layout_weight="8"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="결제"
                android:textColor="#263959"
                android:textSize="17dp"/>

        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="15dp"
            android:layout_marginVertical="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1.4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="쿠폰"
                android:textSize="15dp"
                android:textColor="@color/login_bg_green"/>
            <TextView
                android:layout_weight="4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="1000원 할인"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:background="@drawable/rounding_p_m_btn"
                android:text="변경하기"
                android:textColor="#6D819C"/>

        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="30dp"
            android:layout_marginVertical="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="포인트"
                android:textSize="15dp"
                android:textColor="@color/login_bg_green"/>
            <EditText
                android:paddingRight="10dp"
                android:gravity="right"
                android:layout_marginHorizontal="20dp"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="fill_parent"
                android:background="#E4E7EC"
                android:text="P"
                android:textSize="15dp"
                android:textColor="#6D819C"/>
            <Button
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="fill_parent"
                android:background="@drawable/rounding_p_m_btn"
                android:text="전액사용"
                android:textColor="#6D819C"/>

        </LinearLayout>
        <LinearLayout
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="총상품금액"
                android:textSize="15dp"
                android:textColor="@color/login_bg_green"/>
            <TextView
                android:textSize="15dp"
                android:layout_marginHorizontal="5dp"
                android:gravity="right"
                android:layout_weight="4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#6D819C"/>
            <TextView
                android:textSize="15dp"
                android:layout_marginHorizontal="5dp"
                android:layout_weight="4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="원"
                android:textColor="@color/login_bg_green"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="배송비"
                android:textSize="15dp"
                android:textColor="@color/login_bg_green"/>
            <TextView
                android:textSize="15dp"
                android:layout_marginHorizontal="5dp"
                android:gravity="right"
                android:layout_weight="4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="2500"
                android:textColor="#6D819C"/>
            <TextView
                android:textSize="15dp"
                android:layout_marginHorizontal="5dp"
                android:layout_weight="4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="원"
                android:textColor="@color/login_bg_green"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="할인금액"
                android:textSize="15dp"
                android:textColor="@color/login_bg_green"/>
            <TextView
                android:textSize="15dp"
                android:layout_marginHorizontal="5dp"
                android:gravity="right"
                android:layout_weight="4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#6D819C"/>
            <TextView
                android:textSize="15dp"
                android:layout_marginHorizontal="5dp"
                android:layout_weight="4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="원"
                android:textColor="@color/login_bg_green"/>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/orderBtn"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="20dp"
        android:text="0 원주문하기"
        android:textSize="22dp"
        android:textColor="@color/white"
        android:background="@drawable/rounding3"/>


</LinearLayout>