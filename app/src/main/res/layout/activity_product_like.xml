<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:id="@+id/drawerLay">

    <!--배경이 될 Layout-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.3"
            android:padding="3dp">

            <ImageButton
                android:id="@+id/padding"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#00FFFFFF"
                android:padding="15dp"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4.3"
                android:layout_margin="5dp"
                android:padding="3dp"
                android:text="찜한 상품"
                android:fontFamily="@font/nanumsquare"
                android:textSize="22dp" />

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/cartBtn"
                android:background="@drawable/carticonsize"
                android:layout_weight="1"
                />


        </LinearLayout>

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/pager_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="16.5"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.3">
            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/homeicon"
                android:background="@color/white"
                android:layout_gravity="center"
                android:id="@+id/homeBtn"/>
            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/boxicon"
                android:background="@color/white"
                android:layout_gravity="center"
                android:id="@+id/boxBtn"/>
            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/likeicon"
                android:background="@color/white"
                android:layout_gravity="center"
                android:id="@+id/likeBtn"/>
            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/usericon"
                android:background="@color/white"
                android:layout_gravity="center"
                android:id="@+id/myBtn"/>

        </LinearLayout>
    </LinearLayout>

    <!--드로어 화면이 될 Layout-->
    <!--    android:layout_gravity="start"

                android:drawableLeft="@drawable/kitchensize"-->

</androidx.drawerlayout.widget.DrawerLayout>