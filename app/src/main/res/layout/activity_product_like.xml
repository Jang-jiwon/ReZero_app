<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".product_like">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/white"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.3"
            android:padding="3dp">

            <ImageButton
                android:id="@+id/btn_OpenDrawer"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#00FFFFFF"
                android:padding="15dp"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/likeText"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="6"
                android:text="찜한 상품" />

            <ImageButton
                android:id="@+id/cartBtn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/carticonsize" />


        </LinearLayout>

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/pager_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="15" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.3">

            <ImageButton
                android:id="@+id/homeBtn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/white"
                android:src="@drawable/homeicon" />

            <ImageButton
                android:id="@+id/boxBtn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/white"
                android:src="@drawable/boxicon" />

            <ImageButton
                android:id="@+id/likeBtn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/white"
                android:src="@drawable/likeicon" />

            <ImageButton
                android:id="@+id/myBtn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/white"
                android:src="@drawable/usericon" />

        </LinearLayout>
    </LinearLayout>

    <!--드로어 화면이 될 Layout-->
    <!--    android:layout_gravity="start"

                android:drawableLeft="@drawable/kitchensize"-->
    <LinearLayout
        android:id="@+id/drawer"
        android:layout_width="300dp"
        android:layout_height="0dp"
        android:layout_gravity="start"
        android:background="#ffffff"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingRight="12mm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/linearLayout"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#E4E7EC"
            android:fontFamily="@font/nanumsquare"
            android:padding="20dp"
            android:text="제품별"
            android:textColor="#6D819C"
            android:textSize="24dp" />

        <Button
            android:id="@+id/kitchenBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:drawableRight="@drawable/gobtnsize"
            android:fontFamily="@font/nanumsquare"
            android:gravity="left|center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="주방"
            android:textColor="#6D819C"
            android:textSize="24dp" />

        <Button
            android:id="@+id/bathBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:drawableRight="@drawable/gobtnsize"
            android:fontFamily="@font/nanumsquare"
            android:gravity="left|center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="욕실"
            android:textColor="#6D819C"
            android:textSize="24dp" />

        <Button
            android:id="@+id/livingBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:drawableRight="@drawable/gobtnsize"
            android:fontFamily="@font/nanumsquare"
            android:gravity="left|center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="리빙"
            android:textColor="#6D819C"
            android:textSize="24dp" />

        <Button
            android:id="@+id/pencyBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:drawableRight="@drawable/gobtnsize"
            android:fontFamily="@font/nanumsquare"
            android:gravity="left|center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="문구"
            android:textColor="#6D819C"
            android:textSize="24dp" />

        <Button
            android:id="@+id/bookBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:drawableRight="@drawable/gobtnsize"
            android:fontFamily="@font/nanumsquare"
            android:gravity="left|center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="책"
            android:textColor="#6D819C"
            android:textSize="24dp" />

        <Button
            android:id="@+id/foodBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:drawableRight="@drawable/gobtnsize"
            android:fontFamily="@font/nanumsquare"
            android:gravity="left|center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="음식"
            android:textColor="#6D819C"
            android:textSize="24dp" />

        <Button
            android:id="@+id/cosmBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:drawableRight="@drawable/gobtnsize"
            android:fontFamily="@font/nanumsquare"
            android:gravity="left|center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="화장품"
            android:textColor="#6D819C"
            android:textSize="24dp" />

        <Button
            android:id="@+id/petBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:drawableRight="@drawable/gobtnsize"
            android:fontFamily="@font/nanumsquare"
            android:gravity="left|center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="반려동물"
            android:textColor="#6D819C"
            android:textSize="24dp" />

        <Button
            android:id="@+id/womanBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:drawableRight="@drawable/gobtnsize"
            android:fontFamily="@font/nanumsquare"
            android:gravity="left|center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="여성용품"
            android:textColor="#6D819C"
            android:textSize="24dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bar" />

        <Button
            android:id="@+id/designerBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:fontFamily="@font/nanumsquare"
            android:gravity="left|center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="디자이너"
            android:textColor="#6D819C"
            android:textSize="24dp" />

        <Button
            android:id="@+id/mypageBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:fontFamily="@font/nanumsquare"
            android:gravity="left|center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="마이페이지"
            android:textColor="#6D819C"
            android:textSize="24dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>