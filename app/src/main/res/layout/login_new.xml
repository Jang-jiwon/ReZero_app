<?xml version="1.0" encoding="utf-8"?>

<!--회원가입_사용자 첫 화면-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id ="@+id/login_new_layout"
    tools:context=".login_new_activity"
    android:background="@color/login_bg_green">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/vitro"
        android:text=""
        android:textColor="@color/login_title_white"
        android:textSize="30sp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_weight="2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="안녕하세요 !"
        android:fontFamily="@font/nanumsquare_extra"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="40dp"
        android:textColor="@color/login_white"
        android:textSize="35sp"
        android:layout_weight="0.4"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_weight="0.4">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/vitro"
            android:text="Re ; ZERO"
            android:textColor="@color/login_title_white"
            android:textSize="35sp"
            android:layout_weight="0.2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanumsquare_extra"
            android:text="입니다"
            android:textColor="@color/login_title_white"
            android:textSize="35sp"
            android:layout_weight="0.7"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/login_layout_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="7"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/vitro"
            android:text=""
            android:textColor="@color/login_title_white"
            android:textSize="50sp"
            android:layout_gravity="center"
            android:textAlignment="center"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="2">

            <TextView
                android:id="@+id/login_new_textview_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="20sp"
                android:text="일반 회원으로 회원가입 →"
                android:fontFamily="@font/nanumsquare_light"
                android:textStyle="bold"
                android:textColor="@color/login_white"/>

            <TextView
                android:id="@+id/login_new_textview_designer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="20sp"
                android:layout_marginTop="20dp"
                android:text="디자이너로 회원가입 →"
                android:fontFamily="@font/nanumsquare_light"
                android:textStyle="bold"
                android:textColor="@color/login_white"/>

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="4">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginTop="20dp"
                android:text="이미 가입하셨나요?"
                android:gravity="right"
                android:fontFamily="@font/nanumsquare_light"
                android:textStyle="bold"
                android:textColor="@color/login_white"
                android:layout_weight="0.5"/>
            <TextView
                android:id="@+id/login_new_textview_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="@string/new_user_1_login"
                android:fontFamily="@font/nanumsquare_light"
                android:textStyle="bold"
                android:textColor="@color/login_white"
                android:layout_weight="0.5"/>

        </LinearLayout>


    </LinearLayout>




</LinearLayout>