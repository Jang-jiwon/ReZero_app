<!-- 아이디 찾기 화면 넣음 X-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id ="@+id/login_find_layout_all"
    tools:context=".login_find_activity"
    android:background="@color/login_white">

    <!-- 타이틀 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:id="@+id/login_find_layout_title"
        android:layout_weight="0">

        <ImageView
            android:id="@+id/login_find_image_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/login_find_1_back"
            android:alpha="0.5"
            android:layout_gravity="center"
            android:layout_weight="3"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="7"
            android:fontFamily="@font/nanumsquare"
            android:text="비밀번호 찾기"
            android:textAlignment="center"
            android:textColor="@color/login_find_blue_few"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanumsquare"
            android:text="          "
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textSize="18sp"
            android:textAlignment="center"/>
    </LinearLayout>
    <!-- 타이틀 끝 -->

    <!-- 회원 정보가 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="60dp"
        android:layout_weight="2.7">

        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/login_pwd_new_2_rainbow"
            android:layout_weight="1.5"
            android:gravity="center"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_weight="0.2"
            android:text="비밀번호 변경 완료"
            android:textAlignment="center"
            android:textColor="@color/login_navy"
            android:textStyle="bold"
            android:fontFamily="@font/nanumsquare"
            android:textSize="35sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:textAlignment="center"
            android:text="비밀번호가 성공적으로 변경되었습니다."
            android:fontFamily="@font/nanumsquare_light"
            android:textColor="@color/login_navy"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="! 문의사항 : skfmf7878@naver.com"
            android:textColor="@color/login_pwd_red"
            android:textAlignment="center"
            android:fontFamily="@font/nanumsquare_light"
            android:textStyle="bold"
            android:textSize="15sp"
            android:alpha="0.7"
            android:layout_marginBottom="30dp"/>


    </LinearLayout>

    <!-- 이전화면으로 돌아가기 버튼 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1.3">

        <FrameLayout
            android:layout_width="340dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginBottom="7dp">

            <View
                android:id="@+id/login_view_now"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/login_rectangle_green_radius_13"
                android:layout_margin="3dp"></View>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.8"
                android:fontFamily="@font/nanumsquare"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginLeft="3dp"
                android:textAlignment="center"
                android:text="로그인하러 가기"
                android:textColor="@color/login_white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_weight="1"></TextView>
        </FrameLayout>

    </LinearLayout>


<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Rainbow icon by Icons8"
    android:gravity="right"
    android:layout_marginRight="10dp"
    android:textSize="13sp"
    android:fontFamily="@font/nanumsquare_light"
    android:textStyle="bold"
    android:textColor="@color/login_find_gray_few"/>
</LinearLayout>