<?xml version="1.0" encoding="utf-8"?>

<!--회원가입_사용자 첫 화면-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id ="@+id/new_designer_2_layout"
    tools:context=".new_designer_2_activity"
    android:background="@color/login_white">


    <!-- 타이틀 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:id="@+id/login_find_layout_title"
        android:layout_weight="0">

        <ImageView
            android:id="@+id/login_find_image_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/login_find_1_back"
            android:layout_gravity="center"
            android:layout_weight="3"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="7"
            android:fontFamily="@font/vitro"
            android:text="Re;Zero"
            android:layout_marginLeft="20dp"
            android:textColor="@color/login_find_blue_few"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanumsquare"
            android:text="          "
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textSize="18sp"
            android:textAlignment="center"/>
    </LinearLayout>
    <!-- 타이틀 끝 -->

    <!-- 스크롤뷰 내용 시작 : 스크롤뷰엔 위젯 하나밖에 못 넣음!!!! -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/login_find_pwd_scroll">

        <LinearLayout
            android:id="@+id/new_designer_1_layout_all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="디자이너 회원가입"
                android:fontFamily="@font/nanumsquare"
                android:textStyle="bold"
                android:textColor="@color/login_find_blue_few"
                android:textSize="27sp"
                android:layout_marginTop="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- 브랜드 정보 입력 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">

                    <TextView
                        android:id="@+id/new_designer_1_textview_brand"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="브랜드 정보 입력"
                        android:fontFamily="@font/nanumsquare"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="@color/login_find_blue_few"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal">

                        <FrameLayout
                            android:layout_width="58dp"
                            android:layout_height="58dp" >

                            <View
                                android:layout_width="wrap_content"
                                android:layout_height="55dp"
                                android:background="@drawable/new_designer_circle_green" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:text="프로필\n사진"
                                android:textColor="@color/login_find_blue_few"
                                android:textStyle="bold"
                                android:textAlignment="center"
                                android:textSize="15sp"/>
                        </FrameLayout>

                        <EditText
                            android:id="@+id/new_designer_2_brand_name"
                            android:layout_width="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/login_bg_green"
                            android:paddingRight="20dp"
                            android:paddingLeft="15dp"
                            android:paddingTop="12dp"
                            android:paddingBottom="12dp"
                            android:fontFamily="@font/nanumsquare"
                            android:textColor="@color/login_find_navy"
                            android:textSize="18sp"
                            android:hint="이름을 작성해주세요"
                            android:textColorHint="@color/login_find_navy_alpha"
                            android:layout_weight="6"
                            android:layout_gravity="center"/>

                        <FrameLayout
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="11dp"
                            android:gravity="center"
                            android:layout_weight="0.8">

                            <View
                                android:id="@+id/new_designer_2_view_only"
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:background="@drawable/login_rectangle_green_box_radius_"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="중복 확인"
                                android:layout_gravity="center"
                                android:fontFamily="@font/nanumsquare"
                                android:textColor="@color/login_bg_green"
                                android:textSize="17sp" />
                        </FrameLayout>
                    </LinearLayout>
                </LinearLayout>
                <!-- 브랜드 정보 입력 끝 -->

                <!-- 브랜드 소개 글 -->

                <!-- 브랜드 정보 입력 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="35dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="브랜드 소개 글"
                        android:fontFamily="@font/nanumsquare"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="@color/login_find_blue_few"/>

                    <EditText
                        android:id="@+id/new_designer_2_edittext_intro"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/new_designer_2_rectangle_green_box"
                        android:layout_marginTop="12dp"
                        android:paddingRight="20dp"
                        android:paddingLeft="13dp"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:fontFamily="@font/nanumsquare"
                        android:textColor="@color/login_find_navy"
                        android:textSize="18sp"
                        android:hint="브랜드에 대해 간단히 소개해주세요.\n"
                        android:textColorHint="@color/login_find_navy_alpha"
                        android:layout_weight="0"
                        android:layout_gravity="center"/>
                </LinearLayout>
                <!-- 브랜드 소개 글 끝 -->

                <!-- 판매할 상품 입력 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="35dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="판매할 상품에 대한 설명"
                        android:fontFamily="@font/nanumsquare"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="@color/login_find_blue_few"/>

                    <EditText
                        android:id="@+id/new_designer_2_edittext_product"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/new_designer_2_rectangle_green_box"
                        android:layout_marginTop="12dp"
                        android:paddingRight="20dp"
                        android:paddingLeft="13dp"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:fontFamily="@font/nanumsquare"
                        android:textColor="@color/login_find_navy"
                        android:textSize="18sp"
                        android:hint="제로웨이스트 상품과 목적이 일치하지 않을 경우\n자동으로 판매가 중지될 수 있습니다."
                        android:textColorHint="@color/login_find_navy_alpha"
                        android:layout_weight="0"
                        android:layout_gravity="center"/>
                </LinearLayout>
                <!-- 판매할 상품 끝 -->

                <!-- 작품 제작 과정 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="35dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="작품 제작 과정"
                        android:fontFamily="@font/nanumsquare"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="@color/login_find_blue_few"/>

                    <EditText
                        android:id="@+id/new_designer_2_edittext_make"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/new_designer_2_rectangle_green_box"
                        android:layout_marginTop="12dp"
                        android:paddingRight="20dp"
                        android:paddingLeft="13dp"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:fontFamily="@font/nanumsquare"
                        android:textColor="@color/login_find_navy"
                        android:textSize="18sp"
                        android:hint="과정 상세 설명 및 사진 6장 또는 영상 첨부 필수\n"
                        android:textColorHint="@color/login_find_navy_alpha"
                        android:layout_weight="0"
                        android:layout_gravity="center"/>
                </LinearLayout>
                <!-- 작품 제작 과정 끝 -->

                <!-- 사진 첨부 1째 줄-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_marginTop="35dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">
                    
                    <FrameLayout
                        android:layout_width="58dp"
                        android:layout_height="58dp"
                        android:layout_weight="1">

                        <View
                            android:id="@+id/new_designer_2_view_photo_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:alpha="0.5"
                            android:background="@drawable/login_rectangle_green_box_radius_" />

                        <ImageView
                            android:id="@+id/new_designer_2_imageview_photo_x"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/new_designer_2_photo_x"
                            android:layout_gravity="right"
                            android:layout_marginRight="4dp"
                            android:layout_marginTop="4dp"/>
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="58dp"
                        android:layout_height="58dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="20dp">

                        <View
                            android:id="@+id/new_designer_2_view_photo_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:alpha="0.5"
                            android:background="@drawable/login_rectangle_green_box_radius_" />

                        <ImageView
                            android:id="@id/new_designer_2_imageview_photo_x"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/new_designer_2_photo_x"
                            android:layout_gravity="right"
                            android:layout_marginRight="4dp"
                            android:layout_marginTop="4dp"/>
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="58dp"
                        android:layout_height="58dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="20dp">

                        <View
                            android:id="@+id/new_designer_2_view_photo_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:alpha="0.5"
                            android:background="@drawable/login_rectangle_green_box_radius_" />

                        <ImageView
                            android:id="@id/new_designer_2_imageview_photo_x"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/new_designer_2_photo_x"
                            android:layout_gravity="right"
                            android:layout_marginRight="4dp"
                            android:layout_marginTop="4dp"/>
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="58dp"
                        android:layout_height="58dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="20dp">

                        <View
                            android:id="@+id/new_designer_2_view_photo_4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:alpha="0.5"
                            android:background="@drawable/login_rectangle_green_box_radius_" />

                        <ImageView
                            android:id="@id/new_designer_2_imageview_photo_x"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/new_designer_2_photo_x"
                            android:layout_gravity="right"
                            android:layout_marginRight="4dp"
                            android:layout_marginTop="4dp"/>
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="58dp"
                        android:layout_height="58dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="20dp">

                        <View
                            android:id="@+id/new_designer_2_view_photo_5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:alpha="0.5"
                            android:background="@drawable/login_rectangle_green_box_radius_" />

                        <ImageView
                            android:id="@id/new_designer_2_imageview_photo_x"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/new_designer_2_photo_x"
                            android:layout_gravity="right"
                            android:layout_marginRight="4dp"
                            android:layout_marginTop="4dp"/>
                    </FrameLayout>
                    
                </LinearLayout>
                <!-- 사진 1째 줄 끝-->

                <!-- 사진 첨부 2째줄 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">

                    <FrameLayout
                        android:layout_width="58dp"
                        android:layout_height="58dp"
                        android:layout_weight="1">

                        <View
                            android:id="@+id/new_designer_2_view_photo_6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:alpha="0.5"
                            android:background="@drawable/login_rectangle_green_box_radius_" />

                        <ImageView
                            android:id="@id/new_designer_2_imageview_photo_x"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/new_designer_2_photo_x"
                            android:layout_gravity="right"
                            android:layout_marginRight="4dp"
                            android:layout_marginTop="4dp"/>
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="58dp"
                        android:layout_height="58dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="20dp">

                        <View
                            android:id="@+id/new_designer_2_view_photo_7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:alpha="0.5"
                            android:background="@drawable/login_rectangle_green_box_radius_" />

                        <ImageView
                            android:id="@id/new_designer_2_imageview_photo_x"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/new_designer_2_photo_x"
                            android:layout_gravity="right"
                            android:layout_marginRight="4dp"
                            android:layout_marginTop="4dp"/>
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="58dp"
                        android:layout_height="58dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="20dp">

                        <View
                            android:id="@+id/new_designer_2_view_photo_8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:alpha="0.5"
                            android:background="@drawable/login_rectangle_green_box_radius_" />

                        <ImageView
                            android:id="@id/new_designer_2_imageview_photo_x"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/new_designer_2_photo_x"
                            android:layout_gravity="right"
                            android:layout_marginRight="4dp"
                            android:layout_marginTop="4dp"/>
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="58dp"
                        android:layout_height="58dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="20dp">

                        <View
                            android:id="@+id/new_designer_2_view_photo_9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:alpha="0.5"
                            android:background="@drawable/login_rectangle_green_box_radius_" />

                        <ImageView
                            android:id="@id/new_designer_2_imageview_photo_x"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/new_designer_2_photo_x"
                            android:layout_gravity="right"
                            android:layout_marginRight="4dp"
                            android:layout_marginTop="4dp"/>
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="58dp"
                        android:layout_height="58dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="20dp">

                        <View
                            android:id="@+id/new_designer_2_view_photo_10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:alpha="0.5"
                            android:background="@drawable/login_rectangle_green_box_radius_" />

                        <ImageView
                            android:id="@id/new_designer_2_imageview_photo_x"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/new_designer_2_photo_x"
                            android:layout_gravity="right"
                            android:layout_marginRight="4dp"
                            android:layout_marginTop="4dp"/>
                    </FrameLayout>

                </LinearLayout>
                <!-- 사진 2째 줄 끝-->

                </LinearLayout>

            <!-- 회원가입 완료 버튼 -->
            <!-- 가입완료 버튼 -->
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="53dp"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_gravity="center"
                android:layout_marginBottom="50dp">

                <View
                    android:id="@+id/new_designer_2_view_success"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="3dp"
                    android:background="@drawable/new_user_rectangle_green_dark"></View>

                <TextView
                    android:id="@+id/new_user_1_textview_success"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.8"
                    android:fontFamily="@font/nanumsquare"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginLeft="3dp"
                    android:textAlignment="center"
                    android:text="가입 완료"
                    android:textColor="@color/login_white"
                    android:textSize="19sp"
                    android:textStyle="bold"
                    android:layout_weight="1"></TextView>
            </FrameLayout>

            <!-- 완료 버튼 끝 -->
            </LinearLayout>
    </ScrollView>
</LinearLayout>