<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:id ="@+id/user_mypage_delivery_layout_all"
    tools:context=".user_mypage_delivery_activity">

    <!-- 타이틀 -->
    <LinearLayout
        android:id="@+id/login_find_layout_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:layout_weight="10">

        <ImageView
            android:id="@+id/login_find_image_back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/login_find_1_back"
            android:layout_gravity="center"
            android:layout_weight="3"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="7"
            android:fontFamily="@font/nanumsquare"
            android:text="주문 · 배송"
            android:textAlignment="center"
            android:textColor="@color/login_find_blue_few"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanumsquare"
            android:text="          "
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textSize="18sp"
            android:textAlignment="center"/>
    </LinearLayout>
    <!-- 타이틀 끝 -->

    <!-- 본문 시작 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.8"
        android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">


            <!-- 주문 배송 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="배송 중"
                    android:fontFamily="@font/nanumsquare"
                    android:layout_gravity="center"
                    android:textColor="@color/login_navy"
                    android:textSize="20sp"
                    android:layout_marginBottom="10dp"
                    android:alpha="0.8"/>

                <TextView
                    android:id="@+id/user_mypage_1_textview_box_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="0"
                    android:fontFamily="@font/nanumsquare_extra"
                    android:textStyle="bold"
                    android:textColor="@color/login_bg_green"
                    android:textSize="30sp"/>
            </LinearLayout>
            <!-- 주문 배송 끝 -->

            <!-- 주문 배송 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="배송 완료"
                    android:fontFamily="@font/nanumsquare"
                    android:layout_gravity="center"
                    android:textColor="@color/login_navy"
                    android:textSize="20sp"
                    android:layout_marginBottom="10dp"
                    android:alpha="0.8"/>

                <TextView
                    android:id="@+id/user_mypage_1_textview_box_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="0"
                    android:fontFamily="@font/nanumsquare_extra"
                    android:textStyle="bold"
                    android:textColor="@color/login_bg_green"
                    android:textSize="30sp"/>
            </LinearLayout>
            <!-- 주문 배송 끝 -->

            <!-- 주문 배송 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="취소 · 환불"
                    android:fontFamily="@font/nanumsquare"
                    android:layout_gravity="center"
                    android:textColor="@color/login_navy"
                    android:textSize="20sp"
                    android:layout_marginBottom="10dp"
                    android:alpha="0.8"/>

                <TextView
                    android:id="@+id/user_mypage_1_textview_box_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="0"
                    android:fontFamily="@font/nanumsquare_extra"
                    android:textStyle="bold"
                    android:textColor="@color/login_bg_green"
                    android:textSize="30sp"/>
            </LinearLayout>
            <!-- 주문 배송 끝 -->

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2.5dp"
            android:alpha="0.3"
            android:background="@drawable/login_find_graybar"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center|left"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="(20211001) 주문 번호"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/nanumsquare"
                android:gravity="center|left"
                android:textColor="@color/login_navy"
                android:textSize="20sp"
                android:layout_weight="6"
                android:alpha="0.7"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/user_mypage_1_next_arrow"
                android:layout_marginRight="20dp"/>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2.5dp"
            android:alpha="0.3"
            android:gravity="bottom"
            android:layout_gravity="bottom"
            android:background="@drawable/login_find_graybar"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_margin="20dp"
                    android:id="@+id/user_mypage_delivery_layout_box_3"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:background="@drawable/new_designer_2_rectangle_gray_box_1">
                </FrameLayout>

                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="구매확정"
                        android:fontFamily="@font/nanumsquare"
                        android:layout_gravity="center"
                        android:textColor="@color/login_navy"
                        android:textSize="28sp"
                        android:layout_marginBottom="10dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="제품명"
                        android:fontFamily="@font/nanumsquare_light"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:textColor="@color/login_navy"
                        android:textSize="24sp"
                        android:layout_marginBottom="10dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="가격"
                        android:fontFamily="@font/nanumsquare_light"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:textColor="@color/login_navy"
                        android:textSize="24sp"
                        android:layout_marginBottom="10dp"/>

                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_margin="20dp"
                    android:id="@+id/user_mypage_delivery_layout_box_1"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:background="@drawable/new_designer_2_rectangle_gray_box_1">
                </FrameLayout>

                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="구매확정"
                        android:fontFamily="@font/nanumsquare"
                        android:layout_gravity="center"
                        android:textColor="@color/login_navy"
                        android:textSize="28sp"
                        android:layout_marginBottom="10dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="제품명"
                        android:fontFamily="@font/nanumsquare_light"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:textColor="@color/login_navy"
                        android:textSize="24sp"
                        android:layout_marginBottom="10dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="가격"
                        android:fontFamily="@font/nanumsquare_light"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:textColor="@color/login_navy"
                        android:textSize="24sp"
                        android:layout_marginBottom="10dp"/>

                </LinearLayout>



            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>